@model websurvey2._0.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<link rel="stylesheet" href="~/css/auth/reset.css" asp-append-version="true" />

<div class="auth-container">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h4 class="text-center mb-3">Reset Password</h4>
            <p class="text-muted text-center mb-4">
                Please enter your new password.
            </p>

            @if (TempData["ResetError"] is string emsg)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @emsg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div id="alert-container"></div>

            <form asp-action="ResetPassword" asp-controller="Auth" method="post" id="resetForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">New Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter strong password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Must be at least 12 characters with upper, lower, digit and special character.
                    </small>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary w-100 mb-3" id="submitBtn">
                    <span id="btnText">Update Password</span>
                    <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                </button>
            </form>
            
            <div class="text-center">
                <a asp-action="Login" asp-controller="Auth" class="text-decoration-none">
                    ← Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth/reset.js" asp-append-version="true"></script>
}