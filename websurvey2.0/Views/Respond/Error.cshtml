@{
    ViewData["Title"] = "Error";
}

<link rel="stylesheet" href="~/css/respond/error.css" asp-append-version="true" />

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <h1 class="error-title">Unable to Load Survey</h1>
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error-message">@ViewBag.ErrorMessage</p>
        }
        else
        {
            <p class="error-message">The survey you are trying to access is not available.</p>
        }
        <a href="~/" class="btn btn-primary">Go to Home</a>
    </div>
</div>